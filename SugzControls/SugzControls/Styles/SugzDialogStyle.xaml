<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SugzControls">



    <Style x:Key="SugzDialogStyle" TargetType="{x:Type local:SugzDialog}">
        <Setter Property="SnapsToDevicePixels" Value="true"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="Background" Value="#FF444444"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SugzDialog}">
                    <Grid>
                        <Rectangle x:Name="LeftResize" 
			                       Fill="Green" 
			                       Width="5" 
			                       HorizontalAlignment="Left"
			                       VerticalAlignment="Stretch"
			                       Cursor="SizeWE"/>
                        
                        <Rectangle x:Name="RightResize" 
			                       Fill="Yellow" 
			                       Width="5" 
			                       HorizontalAlignment="Right"
			                       VerticalAlignment="Stretch"
			                       Cursor="SizeWE"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>