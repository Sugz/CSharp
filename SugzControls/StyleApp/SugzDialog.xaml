<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StyleApp"
             xmlns:SugzControls="clr-namespace:SugzControls;assembly=SugzControls" x:Class="StyleApp.SugzDialog"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid Background="{Binding Background, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type SugzControls:SugzDialog}}}">

        <Rectangle x:Name="LeftResize" 
			Fill="Transparent" 
			Width="5" 
			HorizontalAlignment="Left"
			VerticalAlignment="Stretch"
			Cursor="SizeWE"/>

        <Rectangle x:Name="RightResize" 
			Fill="Transparent" 
			Width="5" 
			HorizontalAlignment="Right"
			VerticalAlignment="Stretch"
			Cursor="SizeWE"/>

    </Grid>
</UserControl>
